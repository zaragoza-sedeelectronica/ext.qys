    }

    .card .content .main {
        min-height: 160px;
    }

    .card .back .content .main {
        height: 215px;
    }

    .card .title {
        font-size: 22px;
        line-height: 28px;
        margin: 10px 0 0;
        text-align: center;
        /*text-transform: capitalize;*/
    }

    .card .subtitle {
