<div class="card" style="min-height:8em;">
    <h3 class="margin-b1em"><a th:href="${'/opencityext/servicio/contratacion-publica/'+doc.id}" sede:rdf="${doc.get('title')}"/></h3>
    <span class="fas fa-calendar-alt" title="Fecha publicación"></span> <span class="padding-l05em"  th:text="${#dates.format(doc.creationDate, 'yyyy')}"></span>
  <a th:if="${doc.type}" 
    th:href="'/opencityext/servicio/contratacion-publica/?'+ ${#httpServletRequest.getQueryString() !=null ?   #strings.contains(#httpServletRequest.getQueryString(),'type.id')==true ?#strings.replace(#httpServletRequest.getQueryString(),'type.id=&amp;','type.id='+doc.type.id+'&amp;') :#httpServletRequest.getQueryString()+'&amp;type.id='+doc.type.id :'type.id='+doc.type.id}" sede:rdf="${doc.type.get('title')}"  class="label label-success margin-r05em"></a>
   <span class="color-1" th:text="${doc.status.title}"></span>
    <hr/>   
 <!-- <p th:text="${doc}"></p>-->
       <p class="margin-t1em"><strong>Entidad contratante: </strong>
       <a th:if="${doc.entity.id==1}" th:href="'/opencityext/servicio/contratacion-publica/entidad/'+${doc.entity.id}" th:text="${doc.entity.title}"></a>
       <a th:unless="${doc.entity.id==1}" th:href="'/opencityext/servicio/contratacion-publica/servicio-gestor/'+${doc.servicio}" th:text="${doc.entity.title}"></a>
       </p>
         <p class="margin-t1em" th:if="${doc.entity.id==1}" th:each="s:${doc.organoContratante}">
        <strong >Organismo contratante: </strong>
        <a  th:href="'/opencityext/servicio/contratacion-publica/organismo-contratante/'+${s.id}" th:text="${s.title}"></a>
    </p>
        <p class="margin-t1em" th:if="${doc.entity.id==1}" th:each="s:${doc.servicio}">       
        <strong >Servicio gestor: </strong>
        <a  th:href="'/opencityext/servicio/contratacion-publica/servicio-gestor/'+${s.id}" th:text="${s.title}"></a>
    </p>
    <p th:if="${#arrays.length(doc.lotes)>0}" >
        <a data-toggle="collapse" th:href="${'#ofertasLote'+doc.id}" aria-expanded="false" aria-controls="ofertasLote">Listado de Lotes</a>
    </p>
    <div th:id="${'ofertasLote'+doc.id}" class="panel-collapse" th:classappend="${#arrays.length(doc.lotes) >0 } ? collapse : 'collapse in'">
        <div class="">
        <p th:each="a : ${doc.ofertas}">
            <span th:if="${a.ganador == true}">
                <p th:if="${a.lote !=null}" th:each="l :${a.lote}">					
					<p th.text="${a}"></p>
					<span th:if="${l !=null}">
						<strong  th:text="${l.description}"></strong>
                    </span>
                </p>
                <span class="far fa-thumbs-up" title="Adjudicatario"></span>
                <th:block th:each="e : ${a.Empresa}">
                    <a th:href="'/opencityext/servicio/contratacion-publica/licitador/'+${e.idEmpresa}"><span th:text="${e.nombre}"> Luis Daniel Ballesteros Jordán</span></a>
                </th:block>
                <p th:if="${a.importeSinIVA}">
                    <strong>Importe:
                        <span class="color-2" th:text="${#numbers.formatDecimal(a.importeSinIVA ,0, 'POINT', 2, 'COMMA')} + '€'"/><span th:if="${a.importeConIVA}" th:text="' (con IVA: ' + ${#numbers.formatDecimal(a.importeConIVA, 2, 'POINT', 2, 'COMMA')} + '€)'" /></strong></p>
            </span>
        </p>
        </div>
    </div>
      <strong>Número de licitadores: </strong><span th:text="${#lists.size(doc.ofertas)}"></span>
</div>
<!--<div class="ribbon-wrapper" th:if="${doc.procedimiento.id==10}">
    <div class="ribbon-info">Menor</div>
</div>-->
